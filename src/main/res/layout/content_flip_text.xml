<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.myanmar.mmtexttool.FlipText"
    tools:showIn="@layout/activity_flip_text">

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        ads:adSize="BANNER"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        ads:adUnitId="ca-app-pub-4173348573252986/3254327616">
    </com.google.android.gms.ads.AdView>

    <EditText
        android:id="@+id/flip_edMain"
        android:hint="Enter Your Text Here!"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>

    <EditText
        android:layout_marginTop="5dp"
        android:id="@+id/flip_edStyle1"
        android:layout_toLeftOf="@+id/style1Copy"
        android:layout_below="@+id/flip_edMain"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>

    <ImageButton
        android:id="@+id/style1Copy"
        android:layout_below="@+id/flip_edMain"
        android:layout_alignParentRight="true"
        android:background="@drawable/clip_bg"
        android:src="@drawable/copy"
        android:layout_width="50dp"
        android:layout_height="50dp" />

    <EditText
        android:layout_marginTop="5dp"
        android:id="@+id/flip_edStyle2"
        android:layout_toLeftOf="@+id/style2Copy"
        android:layout_below="@+id/flip_edStyle1"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>

    <ImageButton
        android:id="@+id/style2Copy"
        android:layout_below="@+id/flip_edStyle1"
        android:layout_alignParentRight="true"
        android:background="@drawable/clip_bg"
        android:src="@drawable/copy"
        android:layout_width="50dp"
        android:layout_height="50dp" />

    <EditText
        android:layout_marginTop="5dp"
        android:id="@+id/flip_edStyle3"
        android:layout_toLeftOf="@+id/style3Copy"
        android:layout_below="@+id/flip_edStyle2"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>

    <ImageButton
        android:id="@+id/style3Copy"
        android:layout_below="@+id/flip_edStyle2"
        android:layout_alignParentRight="true"
        android:background="@drawable/clip_bg"
        android:src="@drawable/copy"
        android:layout_width="50dp"
        android:layout_height="50dp" />

    <EditText
        android:layout_marginTop="5dp"
        android:id="@+id/flip_edStyle4"
        android:layout_toLeftOf="@+id/style4Copy"
        android:layout_below="@+id/flip_edStyle3"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>

    <ImageButton
        android:id="@+id/style4Copy"
        android:layout_below="@+id/flip_edStyle3"
        android:layout_alignParentRight="true"
        android:background="@drawable/clip_bg"
        android:src="@drawable/copy"
        android:layout_width="50dp"
        android:layout_height="50dp" />

</RelativeLayout>
